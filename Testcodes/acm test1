// Motor Front Left connections
#define fL1 1
#define fL2 2
// Motor Front Right connections
#define fR1 3
#define fR2 4
// Motor Back Left connections
#define bL1 5
#define bL2 6
// Motor Back Right connections
#define bR1 7
#define bR2 8
//Ir sensors
#define irLeft 9
#define irRight 10

//States of IR sensor
int irLeftState;
int irRightState;

void setup() {
  //Set all the motor control pins to outputs
  pinMode(fL1, OUTPUT);
  pinMode(fL2, OUTPUT);
  pinMode(fR1, OUTPUT);
  pinMode(fR2, OUTPUT);
  pinMode(bL1, OUTPUT);
  pinMode(bL2, OUTPUT);
  pinMode(bR1, OUTPUT);
  pinMode(bR2, OUTPUT);
  // Set the IR sensors to an input
  pinMode(irLeft, INPUT);
  pinMode(irRight, INPUT);
  // Turn off motors - Initial state
  digitalWrite(fL1, LOW);
  digitalWrite(fL2, LOW);
  digitalWrite(fR1, LOW);
  digitalWrite(fR2, LOW);
  digitalWrite(bL1, LOW);
  digitalWrite(bL2, LOW);
  digitalWrite(bR1, LOW);
  digitalWrite(bR2, LOW);
}

void loop() {
  //Putting the value what IR sensor gives into the state variable of the ir sensors
  irLeftState = !digitalRead(irLeft);
  irRightState = !digitalRead(irRight);
  
  //If statements for detection black line
  //LINE FOUND ON BOTH SENSORS
  if(irLeftState == 1 && irRightState == 1){
    reverse();
    delay(1000);
    turnRight();
  }
  //LINE FOUND ON THE LEFT SENSOR
  else if(irLeftState == 1 && irRightState == 0){
    turnRight();
  }
  //LINE FOUND ON THE RIGHT SENSOR
  else if(irLeftState == 0 && irRightState == 1){
    turnLeft();
  }
  //NO LINES FOUND
  else{
    drive();
  }
}
//Function to drive forward
void drive(){
  digitalWrite(fL1, HIGH);
  digitalWrite(fL2, LOW);
  digitalWrite(fR1, HIGH);
  digitalWrite(fR2, LOW);
  digitalWrite(bL1, HIGH);
  digitalWrite(bL2, LOW);
  digitalWrite(bR1, HIGH);
  digitalWrite(bR2, LOW);
}
//Function to drive backwards
void reverse(){
  digitalWrite(fL1, LOW);
  digitalWrite(fL2, HIGH);
  digitalWrite(fR1, LOW);
  digitalWrite(fR2, HIGH);
  digitalWrite(bL1, LOW);
  digitalWrite(bL2, HIGH);
  digitalWrite(bR1, LOW);
  digitalWrite(bR2, HIGH);
}
//Function to turn to the left
void turnLeft(){
  digitalWrite(fL1, LOW);
  digitalWrite(fL2, HIGH);
  digitalWrite(fR1, HIGH);
  digitalWrite(fR2, LOW);
  digitalWrite(bL1, LOW);
  digitalWrite(bL2, HIGH);
  digitalWrite(bR1, HIGH);
  digitalWrite(bR2, LOW);
}
//Function to turn to the right
void turnRight(){
  digitalWrite(fL1, HIGH);
  digitalWrite(fL2, LOW);
  digitalWrite(fR1, LOW);
  digitalWrite(fR2, HIGH);
  digitalWrite(bL1, HIGH);
  digitalWrite(bL2, LOW);
  digitalWrite(bR1, LOW);
  digitalWrite(bR2, HIGH);
}
//Function to stop the car
void park(){
  digitalWrite(fL1, LOW);
  digitalWrite(fL2, LOW);
  digitalWrite(fR1, LOW);
  digitalWrite(fR2, LOW);
  digitalWrite(bL1, LOW);
  digitalWrite(bL2, LOW);
  digitalWrite(bR1, LOW);
  digitalWrite(bR2, LOW);
}
